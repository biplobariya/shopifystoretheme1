<header class="header-sec">
  

<nav class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <a href="#" class="flex items-center space-x-2">
        <img src="https://placehold.co/40x40" alt="Logo" class="h-10 w-10">
        <span class="font-bold text-xl text-gray-800">MySite</span>
      </a>

      <!-- Menu (Desktop) -->
      <ul class="hidden md:flex space-x-8">
        {%  for link in section.settings.menu.links %}  
          <li>
            <a href="{{ link.url }}" class="text-gray-700 hover:text-blue-600">{{ link.title }}</a>
          </li>

        {% if link.links.size > 0 %}
        <!-- Dropdown -->
        <ul class="relative group">
          <!-- Dropdown Trigger -->
          <button class="text-gray-700 hover:text-blue-600 inline-flex items-center">
            {{ link.title }}
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            class="absolute left-0 top-full hidden group-hover:block bg-white shadow-lg rounded-lg mt-0 w-40 z-50">
          {% for child in link.links %}
            <a href="{{ child.url }}" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">{{ child.title }}</a>
          {%endfor%}
          </div>
        </ul>

        {% endif %}

        {% endfor %}
        


      </ul>

      <!-- Right side button -->
      <div class="hidden md:flex">
        <a href="#" class="text-white bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700 transition">
          Login / Account
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="menu-btn" class="text-gray-700 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
               viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round"
               d="M4 6h16M4 12h16M4 18h16" /></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden px-4 pb-3">
    <a href="#" class="block py-2 text-gray-700 hover:text-blue-600">Home</a>
    <a href="#" class="block py-2 text-gray-700 hover:text-blue-600">About</a>
    <a href="#" class="block py-2 text-gray-700 hover:text-blue-600">Services</a>
    <a href="#" class="block py-2 text-gray-700 hover:text-blue-600">Contact</a>
    <a href="#" class="block mt-2 text-white bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700">
      Login / Account
    </a>
  </div>
</nav>





</header>

{% schema %}
{
  "name": "Header",
  "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
    ]
}
{% endschema %}
